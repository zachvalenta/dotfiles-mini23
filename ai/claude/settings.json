{
  "alwaysThinkingEnabled": true,
  "vimMode": true,
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Glob",
      "Grep",
      "Read",
      "SlashCommand",
      "Task",
      "WebFetch",
      "WebSearch",
      "Write"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/block_file_ops.sh"
          }
        ]
      }
    ],
    "Stop": [
        {
            "hooks": [
            {
                "type": "command",
                "command": "afplay /System/Library/Sounds/Blow.aiff"
            }
            ]
        }
    ]
  }
}
