{
  "model": "opus",
  "alwaysThinkingEnabled": true,
  "vimMode": true,
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Read",
      "SlashCommand",
      "Task",
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/block_file_ops.sh"
          }
        ]
      }
    ]
  }
}
