{
  "alwaysThinkingEnabled": true,
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(*)",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "Read(*)",
      "ReadFile(*)",
      "SlashCommand(*)",
      "Task(*)",
      "Write(*)",
      "WebFetch(*)"
    ]
  },
  "vimMode": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/block_file_ops.sh"
          }
        ]
      }
    ]
  }
}
